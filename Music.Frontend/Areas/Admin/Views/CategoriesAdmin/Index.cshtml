
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    .font_color a {
        color: black;
        font-size: 20px;
    }

        .font_color a:hover {
            color: royalblue;
        }
</style>
<div ng-app="myApp">
    <div ng-controller="myCtrl">
        <div class="card-box mb-30">
            <div class="pd-20">
                <h4 class="text-black-50 h4">Có {{(list | filter:textSearch).length}} Thể Loại</h4>
            </div>
            <div class="pd-20 ui form">
                <div class="three fields">
                    <div class="field">
                        <div class="ui search">
                            <div class="ui icon input">
                                <input class="prompt" type="text" placeholder="Nhập danh mục..." ng-model="textSearch.category_name">
                                <i class="search icon"></i>
                            </div>
                            <div class="results"></div>
                        </div>
                    </div>
                    <div class="field">
                        <select class="ui dropdown">
                            <option>Tất Cả</option>
                            <option>Hoạt Động</option>
                            <option>Hiển Thị</option>
                            <option>Ngừng Hoạt Động</option>
                            <option>Ngừng Hiển Thị</option>
                        </select>
                    </div>
                    <div class="field">
                        <button class="ui secondary button">
                            <i class="icon-copy dw dw-trash1"></i> Thùng Rác
                        </button>
                        <button data-toggle="modal" data-target="#create-Admin" class="ui button">
                            <i class="icon-copy dw dw-add"></i> Thêm Danh Mục
                        </button>
                    </div>
                </div>
            </div>
            <div class="pb-20">
                <table class="checkbox-datatable table nowrap">
                    <thead>
                        <tr>
                            <th><i class="icon-copy dw dw-list2"></i>  Tên Danh Mục</th>
                            <th><i class="icon-copy dw dw-image1"></i>  Hình Ảnh</th>
                            <th><i class="icon-copy dw dw-battery1"></i>  Trạng Thái</th>
                            <th><i class="icon-copy dw dw-monitor"></i>  Tình Trạng</th>
                            <th><i class="icon-copy dw dw-calendar-11"></i>  Ngày Đăng</th>
                            <th><i class="icon-copy dw dw-calendar1"></i>  Ngày Sửa</th>
                            <th><i class="icon-copy dw dw-magic-wand"></i>  Tuỳ Chọn</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="list in list | filter: textSearch">
                            <td>{{list.category_name}}</td>
                            <td>
                                <img class="ui medium rounded image" style="width: 50px; height: 50px" src="~/Images/Category/{{list.category_img}}">
                            </td>
                            <td>
                                <div ng-show="list.category_active == true">
                                    <button ng-click="active(list.category_id)" class="ui inverted primary button">Hoạt Động</button>
                                </div>
                                <div ng-show="list.category_active == false">
                                    <button ng-click="active(list.category_id)" class="ui inverted red button">Không Hoạt Động</button>
                                </div>
                            </td>
                            <td>
                                <div ng-show="list.category_option == true">
                                    <button ng-click="option(list.category_id)" class="ui inverted green button">Hiển Thị</button>
                                </div>
                                <div ng-show="list.category_option == false">
                                    <button ng-click="option(list.category_id)" class="ui inverted red button">Không Hiển Thị</button>
                                </div>
                            </td>
                            <td>{{list.category_datecreate}}</td>
                            <td>{{list.category_dateupdate}}</td>
                            <td>
                                <div class="font_color">
                                    <a href="#"><i class="icon-copy dw dw-eye"></i></a> |
                                    <a href="#"><i class="icon-copy dw dw-trash1"></i></a> |
                                    <a data-toggle="modal" data-target="#edit-Admin{{list.category_id}}"><i class="icon-copy dw dw-edit2"></i></a>
                                    <!--Modal Edit-->
                                    <div class="col-md-4 col-sm-12 mb-30">
                                        <div class="modal fade bs-example-modal-lg" id="edit-Admin{{list.category_id}}" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
                                            <div class="modal-dialog modal-lg modal-dialog-centered">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h4 class="modal-title" id="myLargeModalLabel">Danh Mục {{list.category_name}}</h4>
                                                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <form class="ui form">
                                                            <p>Chỉnh sửa các thông tin cần thiết: </p>
                                                            <div class="two fields">
                                                                <div class="field">
                                                                    <label>Tên Danh Mục</label>
                                                                    <input value="" name="name" type="text">
                                                                </div>
                                                                <div class="field">
                                                                    <label>Hình Ảnh</label>
                                                                    <input type="file" name="img">
                                                                </div>
                                                            </div>
                                                            <div class="two fields">
                                                                <div class="field">
                                                                    <label>Trạng Thái</label>
                                                                    <select class="ui dropdown">
                                                                        <option value="true">Cho Phép Hoạt Động</option>
                                                                        <option value="false">Không Phép Hoạt Động</option>
                                                                    </select>
                                                                </div>
                                                                <div class="field">
                                                                    <label>Tình Trạng</label>
                                                                    <select class="ui dropdown">
                                                                        <option value="true">Cho Phép Hiển Thị</option>
                                                                        <option value="false">Không Phép Hiển Thị</option>
                                                                    </select>
                                                                </div>
                                                            </div>
                                                            <div class="ui primary submit button right">Sửa</div>
                                                            <div class="ui error message"></div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!--End Modal-->
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- Checkbox select Datatable End -->
<!--Modal create-->
<div class="col-md-4 col-sm-12 mb-30">
    <div class="pd-20">
        <div class="modal fade bs-example-modal-lg" id="create-Admin" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="myLargeModalLabel">Danh Mục</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    </div>
                    <div class="modal-body">
                        <form  class="ui form">
                            <p>Nhập đủ các thông tin sau: </p>
                            <div class="two fields">
                                <div class="field">
                                    <label>Tên Danh Mục</label>
                                    <input placeholder="Nhập tên danh mục" name="name" type="text">
                                </div>
                                <div class="field">
                                    <label>Hình Ảnh</label>
                                    <input type="file" name="img">
                                </div>
                            </div>
                            <div class="two fields">
                                <div class="field">
                                    <label>Trạng Thái</label>
                                    <select class="ui dropdown">
                                        <option value="true">Cho Phép Hoạt Động</option>
                                        <option value="false">Không Phép Hoạt Động</option>
                                    </select>
                                </div>
                                <div class="field">
                                    <label>Tình Trạng</label>
                                    <select class="ui dropdown">
                                        <option value="true">Cho Phép Hiển Thị</option>
                                        <option value="false">Không Phép Hiển Thị</option>
                                    </select>
                                </div>
                            </div>
                            <div class="ui primary submit button right">Thêm</div>
                            <div class="ui error message"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var app = angular.module('myApp', []);
    app.controller('myCtrl', function ($scope, $http) {
        $http({
            method: "GET",
            url: "/JsonAdmin/Categorys"
        }).then(function mySuccess(response) {
            $scope.list = response.data;

            $scope.active = function (id) {
                $http.get("/CategoriesAdmin/Active?id=" + id)
                    .then(function (response) {
                        $scope.list = response.data;
                    });
            };

            $scope.option = function (id) {
                $http.get("/Admin/CategoriesAdmin/Option?id=" + id)
                    .then(function (response) {
                        $scope.list = response.data;
                    });
            };


        }, function myError(response) {
            $scope.list = response.statusText;
        });
    });
</script>

